<project basedir="../../../" name="pyMonteCarlo-XPP">

    <property name="tmp.xpp" location="${tmp.dir}/tmpxpp" />

    <target name="init" description="Initializes">
        <mkdir dir="${tmp.xpp}" />
    </target>

    <target name="clean" description="Cleans">
        <delete dir="${tmp.xpp}" />
    </target>

    <target name="build" description="Builds">
        <!-- pyMonteCarlo -->
        <mkdir dir="${build.dir}/pymontecarlo/program/xpp" />
        <copy todir="${build.dir}/pymontecarlo/program/xpp">
            <fileset dir="${src.dir}/pymontecarlo/program/xpp">
                <include name="**/*.py" />
                <include name="**/*.xsd" />
                <exclude name="**/test_*.py" />
            </fileset>
        </copy>
    </target>

</project>